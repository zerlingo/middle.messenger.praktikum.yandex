<div class="dialog-container">
    <dialog class="dialog">
        <form action="">
            <h2 class="dialog__title{{#if error }} dialog__title_error{{/if}}">{{ title }}</h2>
            <div class="dialog__body">
                {{> @partial-block }}
            </div>
            <div class="dialog__footer">
                {{> Button label=labelOk type="primary" }}
                {{#if labelCancel }}
                    {{> Button label=labelCancel type="link" }}
                {{/if }}
            </div>
        </form>
    </dialog>
</div>
